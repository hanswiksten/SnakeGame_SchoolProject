<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hans.snake_hw.MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="181dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="181dp" />

    <Button
        android:id="@+id/StartGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="158dp"
        android:layout_marginTop="7dp"
        android:onClick="startGameView"
        android:text="Start"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameInsert"
        android:layout_marginEnd="157dp" />

    <EditText
        android:id="@+id/nameInsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/text"
        android:layout_marginRight="84dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="84dp" />

    <ListView
        android:id="@+id/HighScoreList"
        android:layout_width="248dp"
        android:layout_height="214dp"
        android:layout_marginRight="68dp"
        android:layout_marginTop="47dp"
        android:background="@android:drawable/progress_horizontal"
        android:headerDividersEnabled="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StartGame" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="121dp"
        android:layout_marginTop="30dp"
        android:text="Spelare | PoÃ¤ng"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StartGame" />

</android.support.constraint.ConstraintLayout>
